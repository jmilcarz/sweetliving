                                        a(href="").sl-btn.sl-btn-filled.sl-btn-upper.sl-card-btn Więcej
                              .sl-card
                                   img(src="https://sweetliving.pl/image/cache/catalog/BLOG/szafki_nocne_sl_collection/insta%20DSC_1974-500x500.jpg").sl-card-img
                                   .sl-card-body
